{
  "name": "led-calculator-api",
  "version": "1.0.0",
  "description": "LED Display Configuration Calculator API Service",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "build:frontend": "cd frontend && npm run build",
    "build:all": "npm run build && npm run build:frontend",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:all": "concurrently \"npm run dev\" \"cd frontend && npm run dev\"",
    "preview": "npm run build:frontend && npm run dev",
    "test": "jest",
    "test:property": "jest --testPathPattern=property",
    "install:all": "npm install && cd frontend && npm install"
  },
  "keywords": [
    "led",
    "calculator",
    "api",
    "display",
    "configuration"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "sharp": "^0.33.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "concurrently": "^8.2.2",
    "fast-check": "^3.15.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
